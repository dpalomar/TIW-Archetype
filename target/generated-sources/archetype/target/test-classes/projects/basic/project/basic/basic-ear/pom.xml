<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
        <artifactId>basic</artifactId>
        <groupId>archetype.it</groupId>
        <version>0.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
  </parent>

  <groupId>archetype.it.ear</groupId>
  <artifactId>basic-ear</artifactId>
  <packaging>ear</packaging>

  <name>basic-ear</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <plugins>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.6</version>
        <configuration>
            <version>6</version>
            <defaultLibBundleDir>lib</defaultLibBundleDir>
<modules>
            <!-- 4.5.1. Include Java Module. -->
            <jarModule>
            <groupId>archetype.it.util</groupId>
          <artifactId>basic-util</artifactId>
           </jarModule>
            <!-- 4.5.2. Include EJB Module. -->
            <ejbModule>
          <groupId>archetype.it.ejb</groupId>
            <artifactId>basic-ejb</artifactId>
            </ejbModule>
            <!-- 4.5.3. Include Web Application Module. -->
            <webModule>
            <groupId>archetype.it.web</groupId>
            <artifactId>basic-war</artifactId>
           <contextRoot>basic</contextRoot>          
            </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
   <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
  	<dependency>
  		<groupId>es.uc3m.tiw.util</groupId>
  		<artifactId>basic-util</artifactId>
  		<version>1.0</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>es.uc3m.tiw.ejb</groupId>
  		<artifactId>basic-ejb</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  	</dependency>
  	<dependency>
  		<groupId>es.uc3m.tiw.web</groupId>
  		<artifactId>basic-web</artifactId>
  		<version>1.0</version>
  		<type>war</type>
  	</dependency>
  </dependencies>
</project>
